    prompt = f"Aşağıdaki bağlamdan yararlanarak kısa, doğru ve Türkçe bir cevap ver:\n\nBağlam:\n{context}\n\nSoru:\n{query}\n\nCevap:"
    if USE_API:
        response = genai.generate(model="models/gemini-1.5-pro", prompt=prompt)
        return response.candidates[0].output_text
